{
  "latex-workshop.latex.tools": [
    {
      "name": "docker-xelatex",
      "command": "docker",
      "args": [
        "run", "--rm", "--platform=linux/amd64",
        "-e", "TEXINPUTS=/data/texmf//:",
        "-e", "SOURCE_DATE_EPOCH=0",
        "-v", "%DIR%:/data",
        "-w", "/data",
        "ghcr.io/xu-cheng/texlive-full:latest",
        "sh", "-c",
        "mkdir -p build && xelatex -synctex=1 -interaction=nonstopmode -output-directory=./build %DOCFILE%.tex"
      ]
    },
    {
      "name": "docker-biber",
      "command": "docker",
      "args": [
        "run", "--rm", "--platform=linux/amd64",
        "-e", "TEXINPUTS=/data/texmf//:",
        "-e", "SOURCE_DATE_EPOCH=0",
        "-v", "%DIR%:/data",
        "-w", "/data",
        "ghcr.io/xu-cheng/texlive-full:latest",
        "sh", "-c",
        "biber build/%DOCFILE%"
      ]
    },
    {
      "name": "local-clean-build-folder",
      "command": "bash",
      "args": ["-lc", "rm -rf build && mkdir -p build"]
    }
  ],

  "latex-workshop.latex.recipes": [
    {
      "name": "XeLaTeX → Biber → XeLaTeX (Docker → build/)",
      "tools": [
        "docker-xelatex",
        "docker-biber",
        "docker-xelatex",
        "docker-xelatex"
      ]
    },
    {
      "name": "Clean → XeLaTeX → Biber → XeLaTeX ×2 (Docker → build/)",
      "tools": [
        "local-clean-build-folder",
        "docker-xelatex",
        "docker-biber",
        "docker-xelatex",
        "docker-xelatex"
      ]
    },
    {
      "name": "Biber only (Docker → build/)",
      "tools": ["docker-biber"]
    }
  ],

  "latex-workshop.latex.outDir": "build",
  "latex-workshop.latex.autoBuild.run": "onSave",

  "latex-workshop.synctex.enabled": true,
  "latex-workshop.synctex.afterBuild.enabled": true,
  "latex-workshop.synctex.synctexjs.enabled": true,
  "latex-workshop.view.pdf.viewer": "tab",
  "latex-workshop.view.pdf.internal.synctex.keybinding": "ctrl+click",

  "latex-workshop.latex.clean.enabled": true,
  "latex-workshop.latex.clean.method": "glob",
  "latex-workshop.latex.autoClean.run": "onBuilt",
  "latex-workshop.latex.clean.fileTypes": [
    "*.aux","*.bbl","*.blg","*.idx","*.ind","*.lof",
    "*.lot","*.out","*.toc","*.acn","*.acr","*.alg",
    "*.glg","*.glo","*.gls","*.fls","*.log","*.fdb_latexmk",
    "*.snm","*.nav","*.vrb","*.bcf","*.run.xml"
  ],
  "latex-workshop.latex.clean.subFolder.enabled": true
}
